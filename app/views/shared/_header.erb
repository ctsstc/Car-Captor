<header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if current_user %>
    <p class="authenticated">Hello <%= current_user.username %></p>
    <p class="logout"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>
  <% else %>
    <p class="sign-in"><%= link_to('Login', new_user_session_path) %>  </p>
  <% end %>
</header>